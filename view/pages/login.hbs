<section class="auth-main">
    <a href="/auth/registration" class="auth-registration-link">Зарегистрироваться</a>
    <div class="container">
        <h1 class="text-center text-uppercase mb-5">Мой отпуск</h1>
        <form id="login-form" class="auth-form">
            <div class="form-group">
                <label for="authLogin">Логин</label>
                <input type="text" class="form-control" id="authLogin" name="authLogin">
                <small id="authLoginHelp" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label for="authPassword">Пароль</label>
                <input type="password" class="form-control" id="authPassword" name="authPassword">
                <small id="authPasswordHelp" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <a href="" class="text-white">Забыли пароль?</a>
                    </div>
                    <div class="col">
                        <div class="form-check text-right">
                            <input type="checkbox" class="form-check-input" id="authRememberMe" name="authRememberMe">
                            <label class="form-check-label" for="authRememberMe">Запомнить меня</label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-block">Войти</button>
        </form>
    </div>
</section>
