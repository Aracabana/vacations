<div class="container-fluid">
    <h1>{{title}}</h1>
    <div class="content">
        <div class="filter">
            <div>
                <span class="filter-label">Сортировать по:</span>
                <button id="byName" type="button" class="btn btn-sm btn-info">Страна</button>
                <button id="byDateTo" type="button" class="btn btn-sm btn-info">Дата прибытия</button>
                <button id="byStatus" type="button" class="btn btn-sm btn-info">Статус</button>
            </div>
            <div class="filter-search">
                <span class="filter-label">Найти</span>
                <input id="search" type="text" class="form-control">
            </div>
        </div>
        <div class="table-responsive">
            <div id="serverFeedback" class="alert alert-danger" hidden></div>
            <div id="spinner" class="spinner-wrapper" hidden>
                <div class="spinner-border text-success" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <table id="vacations-table" class="table table-striped table-bordered table-hover vacations-table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Страна</th>
                    <th scope="col" class="text-center">Дата начала</th>
                    <th scope="col" class="text-center">Дата окончания</th>
                    <th scope="col">Статус</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
