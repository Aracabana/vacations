<div class="container-fluid">
    <h1>{{title}}</h1>

    <div class="content">
        <div class="row">
            <div class="col-8">
                <div class="card">
                    <form id="vacation-form" class="card-body" novalidate>
                        <div id="serverFeedback" class="alert" hidden></div>
                        <div id="spinner" class="spinner-wrapper" hidden>
                            <div class="spinner-border text-success" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="country">Выберите страну</label>
                            <input id="country"
                                   type="text"
                                   class="form-control"
                                   name="country"
                                   placeholder="Начните вводить"
                                   list="countries-list"
                                   required
                            >
                            <datalist id="countries-list">
                                {{#each countriesWithCode}}
                                    <option class="comment" data-code="{{this.code}}">{{this.name}}</option>
                                {{/each}}
                            </datalist>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="dateFrom">Дата начала</label>
                                    <input
                                            id="dateFrom"
                                            type="date"
                                            class="form-control"
                                            name="dateFrom"
                                            required
                                    >
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="dateTo">Дата завершения</label>
                                    <input
                                            id="dateTo"
                                            type="date"
                                            class="form-control"
                                            name="dateTo"
                                            required
                                    >
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                        </div>
                        <div class="btns text-right">
                            <button type="submit" class="btn btn-success">Создать</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="map-wrapper">
                        <div id="map"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
