<section class="auth-main">
    <a href="/auth/login" class="auth-registration-link">Уже зарегистрированы?</a>
    <div class="container">
        <h1 class="text-center text-uppercase mb-5">Мой отпуск</h1>
        <form id="registration-form" class="auth-form" novalidate>
            <div id="serverFeedback" class="alert" hidden></div>
            <div id="spinner" class="spinner-wrapper" hidden>
                <div class="spinner-border text-success" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="form-group">
                <label for="regLogin">Логин</label>
                <input
                        type="text"
                        class="form-control"
                        id="regLogin"
                        name="login"
                        data-min="4"
                        required
                >
                <small id="regLoginHelp" class="form-text text-muted">Логин должен содержать не менее 4х символов</small>
                <div class="invalid-feedback"></div>
            </div>
            <div class="form-group">
                <label for="regEmail">E-mail</label>
                <input
                        type="email"
                        class="form-control"
                        id="regEmail"
                        data-pattern="^[-\w.]+@([A-z0-9][-A-z0-9]+\.)+[A-z]{2,4}$"
                        required
                >
                <small id="regEmailHelp" class="form-text text-muted"></small>
                <div class="invalid-feedback"></div>
            </div>
            <div class="form-group">
                <label for="regPassword">Пароль</label>
                <input
                        type="password"
                        class="form-control"
                        id="regPassword"
                        name="password"
                        required
                >
                <small id="regPasswordHelp" class="form-text text-muted">Пароль должен содержать не менее 4х символов</small>
                <div class="invalid-feedback"></div>
            </div>
            <div class="form-group">
                <label for="regConfirmPassword">Подтверждение пароля</label>
                <input
                        type="password"
                        class="form-control"
                        id="regConfirmPassword"
                        name="confirmPassword"
                        data-comparewith="regPassword"
                        required
                >
                <small id="regConfirmPasswordHelp" class="form-text text-muted"></small>
                <div class="invalid-feedback"></div>
            </div>
            <button type="submit" class="btn btn-success btn-block">Зарегистрироваться</button>
        </form>
    </div>
</section>
