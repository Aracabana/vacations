<div id="edit-popup" class="popup-bg js-popup-wrapper">
    <div class="popup js-popup">
        <div class="popup-content">
            <button class="btn js-popup-close popup-close" type="button">
                <i class="fas fa-times"></i>
            </button>
            <h3 id="js-popup-title" class="popup-title"></h3>
            <form id="form-edit">
                <div class="form-group">
                    <label for="dateFrom">Дата начала</label>
                    <input
                            id="dateFrom"
                            type="date"
                            class="form-control"
                            name="dateFrom"
                            required
                    >
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="dateTo">Дата завершения</label>
                    <input
                            id="dateTo"
                            type="date"
                            class="form-control"
                            name="dateTo"
                            required
                    >
                    <div class="invalid-feedback"></div>
                </div>
                <div class="btns text-right">
                    <button id="popup-submit" type="submit" class="btn btn-success">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>
